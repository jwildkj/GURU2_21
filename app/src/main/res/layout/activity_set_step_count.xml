<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetStepCount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/setStepCountRBs"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/setStepCountRB1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 걸음" />

                <RadioButton
                    android:id="@+id/setStepCountRB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 걸음" />

                <RadioButton
                    android:id="@+id/setStepCountRB3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="직접 설정" />

                <LinearLayout
                    android:id="@+id/setStepCountET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/setStepCountET1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:hint="00"
                        android:inputType="number"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="60sp" />

                    <TextView
                        android:id="@+id/setStepCountET2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="걸음"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="60sp" />
                </LinearLayout>
            </RadioGroup>

            <Button
                android:id="@+id/setStepCountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="결정" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>